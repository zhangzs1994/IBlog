<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_mine_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mm_500"
            android:layout_alignParentTop="true"
            android:background="@drawable/shape_mine_title"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/mm_79"
            android:text="我的"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/mm_55" />

        <android.support.v7.widget.CardView
            android:id="@+id/cv_mine_user"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mm_510"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/mm_50"
            android:layout_marginRight="@dimen/mm_50"
            android:layout_marginTop="@dimen/mm_200"
            android:layout_marginBottom="@dimen/mm_30"
            app:cardCornerRadius="30mm">

            <LinearLayout
                android:id="@+id/ll_mine_front"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_mine_head"
                        android:layout_width="@dimen/mm_180"
                        android:layout_height="@dimen/mm_180"
                        android:layout_marginLeft="@dimen/mm_50"
                        android:layout_marginRight="@dimen/mm_30"
                        android:layout_marginTop="@dimen/mm_70"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/tv_mine_name"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_mine_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/mm_30"
                        android:layout_marginTop="@dimen/mm_90"
                        android:textColor="@color/colorFont2"
                        android:textSize="@dimen/mm_50"
                        app:layout_constraintLeft_toRightOf="@+id/iv_mine_head"
                        app:layout_constraintRight_toLeftOf="@+id/iv_mine_arrow"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_mine_sign"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/mm_30"
                        android:layout_marginRight="@dimen/mm_30"
                        android:layout_marginTop="@dimen/mm_10"
                        android:textColor="@color/colorFont1"
                        android:textSize="@dimen/mm_45"
                        app:layout_constraintLeft_toRightOf="@+id/iv_mine_head"
                        app:layout_constraintRight_toLeftOf="@+id/iv_mine_arrow"
                        app:layout_constraintTop_toBottomOf="@+id/tv_mine_name" />

                    <ImageView
                        android:id="@+id/iv_mine_arrow"
                        android:layout_width="@dimen/mm_60"
                        android:layout_height="@dimen/mm_60"
                        android:layout_marginRight="@dimen/mm_50"
                        android:layout_marginTop="@dimen/mm_130"
                        android:src="@drawable/right_arrow"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </android.support.constraint.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/mm_30"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_mine_trends"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_weight="1"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mine_trends"
                            android:textColor="@color/colorFont1"
                            android:textSize="@dimen/mm_48" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/mm_10"
                            android:text="23"
                            android:textColor="@color/colorFont"
                            android:textSize="@dimen/mm_48" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="@dimen/mm_1"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/mm_60"
                        android:layout_marginTop="@dimen/mm_60"
                        android:background="@color/colorLine" />

                    <LinearLayout
                        android:id="@+id/ll_mine_fans"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mine_fans"
                            android:textColor="@color/colorFont1"
                            android:textSize="@dimen/mm_48" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/mm_10"
                            android:text="23"
                            android:textColor="@color/colorFont"
                            android:textSize="@dimen/mm_48" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="@dimen/mm_1"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/mm_60"
                        android:layout_marginTop="@dimen/mm_60"
                        android:background="@color/colorLine" />

                    <LinearLayout
                        android:id="@+id/ll_mine_follow"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mine_follow"
                            android:textColor="@color/colorFont1"
                            android:textSize="@dimen/mm_48" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/mm_10"
                            android:text="23"
                            android:textColor="@color/colorFont"
                            android:textSize="@dimen/mm_48" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_mine_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_mine_back"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/mm_1"
        android:background="@color/colorLine" />

    <RelativeLayout
        android:id="@+id/rl_mine_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mm_130"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/iv_mine_info"
            android:layout_width="@dimen/mm_80"
            android:layout_height="@dimen/mm_80"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/mm_100"
            android:src="@drawable/ic_email_pink_400_36dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/mm_40"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/mm_160"
            android:layout_marginTop="@dimen/mm_15"
            android:background="@drawable/shape_mine_info"
            android:gravity="center"
            android:paddingLeft="@dimen/mm_14"
            android:paddingRight="@dimen/mm_14"
            android:text="6"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/mm_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/mm_30"
            android:layout_toRightOf="@+id/iv_mine_info"
            android:gravity="center_vertical"
            android:text="@string/mine_info"
            android:textColor="@color/colorFont2"
            android:textSize="@dimen/mm_48" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/mm_1"
        android:layout_marginLeft="@dimen/mm_100"
        android:background="@color/colorLine" />

    <RelativeLayout
        android:id="@+id/rl_mine_setting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mm_130"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/iv_mine_setting"
            android:layout_width="@dimen/mm_80"
            android:layout_height="@dimen/mm_80"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/mm_100"
            android:src="@drawable/ic_settings_blue_a200_36dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/mm_30"
            android:layout_toRightOf="@+id/iv_mine_setting"
            android:gravity="center_vertical"
            android:text="@string/mine_setting"
            android:textColor="@color/colorFont2"
            android:textSize="@dimen/mm_48" />

        <ImageView
            android:layout_width="@dimen/mm_60"
            android:layout_height="@dimen/mm_60"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/mm_50"
            android:src="@drawable/right_arrow" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/mm_1"
        android:layout_marginLeft="@dimen/mm_100"
        android:background="@color/colorLine" />

    <RelativeLayout
        android:id="@+id/rl_mine_question"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mm_130"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/iv_mine_question"
            android:layout_width="@dimen/mm_80"
            android:layout_height="@dimen/mm_80"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/mm_100"
            android:src="@drawable/ic_live_help_yellow_700_36dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/mm_30"
            android:layout_toRightOf="@+id/iv_mine_question"
            android:gravity="center_vertical"
            android:text="@string/mine_question"
            android:textColor="@color/colorFont2"
            android:textSize="@dimen/mm_48" />

        <ImageView
            android:layout_width="@dimen/mm_60"
            android:layout_height="@dimen/mm_60"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/mm_50"
            android:src="@drawable/right_arrow" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/mm_1"
        android:layout_marginLeft="@dimen/mm_100"
        android:background="@color/colorLine" />

    <RelativeLayout
        android:id="@+id/rl_mine_about"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mm_130"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/iv_mine_about"
            android:layout_width="@dimen/mm_80"
            android:layout_height="@dimen/mm_80"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/mm_100"
            android:src="@drawable/ic_sim_card_alert_green_300_36dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/mm_30"
            android:layout_toRightOf="@+id/iv_mine_about"
            android:gravity="center_vertical"
            android:text="@string/mine_about"
            android:textColor="@color/colorFont2"
            android:textSize="@dimen/mm_48" />

        <ImageView
            android:layout_width="@dimen/mm_60"
            android:layout_height="@dimen/mm_60"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/mm_50"
            android:src="@drawable/right_arrow" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/mm_1"
        android:background="@color/colorLine" />

</LinearLayout>
