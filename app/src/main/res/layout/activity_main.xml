<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ctl_main"/>

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/ctl_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mm_150"
        android:background="@color/colorWhite"
        app:tl_indicator_bounce_enable="false"
        android:layout_alignParentBottom="true"
        app:tl_iconHeight="@dimen/mm_50"
        app:tl_iconWidth="@dimen/mm_50"
        app:tl_indicator_color="@color/colorBlueDark"
        app:tl_indicator_height="0dp"
        app:tl_textSelectColor="@color/colorBlueDark"
        app:tl_textUnselectColor="@color/colorFont"
        app:tl_textsize="@dimen/mm_40"
        app:tl_underline_color="@color/colorLine"
        app:tl_underline_height="@dimen/mm_2"/>

    <LinearLayout
        android:id="@+id/ll_main_zxing"
        android:layout_width="@dimen/mm_210"
        android:layout_height="@dimen/mm_210"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@drawable/shape_main_center_bar">

        <ImageView
            android:layout_width="@dimen/mm_205"
            android:layout_height="@dimen/mm_205"
            android:background="@drawable/scan" />

    </LinearLayout>

</RelativeLayout>
