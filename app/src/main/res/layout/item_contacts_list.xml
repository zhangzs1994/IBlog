<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_index"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLine"
        android:paddingLeft="@dimen/mm_30"
        android:textSize="@dimen/mm_42" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/mm_120"
            android:layout_height="@dimen/mm_120"
            android:layout_margin="@dimen/mm_20"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_avatar"
            android:textColor="@color/colorFont2"
            android:textSize="@dimen/mm_48" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/mm_1"
        android:background="@color/colorLine" />
</LinearLayout>