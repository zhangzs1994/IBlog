<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/iv_item_img"
        android:layout_width="@dimen/mm_180"
        android:layout_height="@dimen/mm_180"
        android:layout_margin="@dimen/mm_30"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_item_title"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="0dp"
        android:layout_height="@dimen/mm_60"
        android:layout_marginRight="@dimen/mm_30"
        android:layout_marginTop="@dimen/mm_20"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/colorFont2"
        android:textSize="@dimen/mm_50"
        app:layout_constraintBottom_toTopOf="@+id/tv_item_desc"
        app:layout_constraintLeft_toRightOf="@+id/iv_item_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mm_30"
        android:layout_marginRight="@dimen/mm_30"
        android:ellipsize="end"
        android:maxLines="2"
        android:gravity="center_vertical"
        android:textColor="@color/colorFont1"
        android:textSize="@dimen/mm_42"
        app:layout_constraintBottom_toTopOf="@+id/tv_item_chapter"
        app:layout_constraintLeft_toRightOf="@+id/iv_item_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_title" />

    <TextView
        android:id="@+id/tv_item_chapter"
        android:layout_width="0dp"
        android:layout_height="@dimen/mm_50"
        android:layout_marginBottom="@dimen/mm_20"
        android:layout_marginLeft="@dimen/mm_30"
        android:textColor="@color/colorFont"
        android:textSize="@dimen/mm_40"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_item_img"
        app:layout_constraintRight_toLeftOf="@+id/tv_item_date"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_desc" />

    <TextView
        android:id="@+id/tv_item_date"
        android:layout_width="0dp"
        android:layout_height="@dimen/mm_50"
        android:layout_marginBottom="@dimen/mm_20"
        android:layout_marginRight="@dimen/mm_30"
        android:gravity="right"
        android:textColor="@color/colorFont"
        android:textSize="@dimen/mm_40"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_item_chapter"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_desc" />

</android.support.constraint.ConstraintLayout>