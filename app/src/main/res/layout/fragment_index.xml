<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dl_index"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_index_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/mm_204"
            android:background="@color/colorBlueLight"
            android:paddingTop="@dimen/mm_54">

            <ImageView
                android:id="@+id/iv_index_list"
                android:layout_width="@dimen/mm_150"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="@dimen/mm_35"
                android:src="@drawable/ic_view_list_white_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/mm_30"
                android:layout_marginLeft="@dimen/mm_150"
                android:layout_marginRight="@dimen/mm_150"
                android:layout_marginTop="@dimen/mm_30"
                android:background="@drawable/shape_index_search">

                <ImageView
                    android:layout_width="@dimen/mm_120"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/mm_15"
                    android:src="@drawable/ic_search_grey_400_24dp" />

                <EditText
                    android:id="@+id/et_index_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="@string/index_hint_search"
                    android:textSize="@dimen/mm_45" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_index_info"
                android:layout_width="@dimen/mm_150"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="@dimen/mm_35"
                android:src="@drawable/ic_notifications_white_24dp" />

        </RelativeLayout>

        <com.youth.banner.Banner
            android:id="@+id/banner_index"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mm_500" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_index_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mm_30" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_index_abeam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mm_50"
            android:orientation="horizontal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_index_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/mm_600"
            android:background="@drawable/timg"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_index_head"
                android:layout_width="@dimen/mm_200"
                android:layout_height="@dimen/mm_200" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_index_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mm_130"
            android:foreground="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/iv_index_msg"
                android:layout_width="@dimen/mm_80"
                android:layout_height="@dimen/mm_80"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/mm_100"
                android:src="@drawable/ic_email_pink_400_36dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/mm_30"
                android:layout_toRightOf="@+id/iv_index_msg"
                android:gravity="center_vertical"
                android:text="@string/mine_info"
                android:textColor="@color/colorFont2"
                android:textSize="@dimen/mm_48" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/mm_1"
            android:layout_marginLeft="@dimen/mm_100"
            android:background="@color/colorLine" />

        <RelativeLayout
            android:id="@+id/rl_index_setting"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mm_130"
            android:foreground="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/iv_index_setting"
                android:layout_width="@dimen/mm_80"
                android:layout_height="@dimen/mm_80"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/mm_100"
                android:src="@drawable/ic_settings_blue_a200_36dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/mm_30"
                android:layout_toRightOf="@+id/iv_index_setting"
                android:gravity="center_vertical"
                android:text="@string/mine_setting"
                android:textColor="@color/colorFont2"
                android:textSize="@dimen/mm_48" />

            <ImageView
                android:layout_width="@dimen/mm_60"
                android:layout_height="@dimen/mm_60"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/mm_50"
                android:src="@drawable/right_arrow" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/mm_1"
            android:layout_marginLeft="@dimen/mm_100"
            android:background="@color/colorLine" />

        <RelativeLayout
            android:id="@+id/rl_index_question"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mm_130"
            android:foreground="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/iv_index_question"
                android:layout_width="@dimen/mm_80"
                android:layout_height="@dimen/mm_80"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/mm_100"
                android:src="@drawable/ic_live_help_yellow_700_36dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/mm_30"
                android:layout_toRightOf="@+id/iv_index_question"
                android:gravity="center_vertical"
                android:text="@string/mine_question"
                android:textColor="@color/colorFont2"
                android:textSize="@dimen/mm_48" />

            <ImageView
                android:layout_width="@dimen/mm_60"
                android:layout_height="@dimen/mm_60"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/mm_50"
                android:src="@drawable/right_arrow" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/mm_1"
            android:layout_marginLeft="@dimen/mm_100"
            android:background="@color/colorLine" />

        <RelativeLayout
            android:id="@+id/rl_index_about"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mm_130"
            android:foreground="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/iv_index_about"
                android:layout_width="@dimen/mm_80"
                android:layout_height="@dimen/mm_80"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/mm_100"
                android:src="@drawable/ic_sim_card_alert_green_300_36dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/mm_30"
                android:layout_toRightOf="@+id/iv_index_about"
                android:gravity="center_vertical"
                android:text="@string/mine_about"
                android:textColor="@color/colorFont2"
                android:textSize="@dimen/mm_48" />

            <ImageView
                android:layout_width="@dimen/mm_60"
                android:layout_height="@dimen/mm_60"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/mm_50"
                android:src="@drawable/right_arrow" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/mm_1"
            android:background="@color/colorLine" />

        <RelativeLayout
            android:id="@+id/rl_index_exit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mm_130"
            android:layout_marginTop="@dimen/mm_200"
            android:foreground="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/iv_index_exit"
                android:layout_width="@dimen/mm_80"
                android:layout_height="@dimen/mm_80"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/mm_100"
                android:src="@drawable/ic_exit_to_app_deep_orange_400_36dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/mm_30"
                android:layout_toRightOf="@+id/iv_index_exit"
                android:gravity="center_vertical"
                android:text="@string/login_exit"
                android:textColor="@color/colorFont2"
                android:textSize="@dimen/mm_48" />

        </RelativeLayout>

    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
